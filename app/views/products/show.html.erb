
<div class="columns">
  <div class="column is-one-third">
    <% if @product.image.present? %>
        <div class="card-image">
          <figure class="image">
            <%= image_tag @product.image %>
          </figure>
        </div>
      <% end %>
  </div>
  <div class="column is-half">
    <div class="card">
      <div class="card-content">
        <h2 class="title"><%= @product.name %></h2>
        <p class="subtitle">$<%= @product.price %></p>
        <br>
        <p class="has-text-weight-light">Body Location: <%= @product.location %></p>
        <p class="has-text-weight-semibold"><%= link_to @product.category.name, @product.category %></p>
        <p class="has-text-weight-semibold"><%= @product.company.name %></p>
      </div>
    </div>

  </div>


</div>

