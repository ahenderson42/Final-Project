
<% if cart.present? %>
  <div class="content">
    <h3 class="title is-5 is-spaced">Cart</h3>
    <ul>
      <% cart.each do |product| %>
        <li>
          <%= product.name %><%= button_to '❌', cart_path(product), method: :delete %>
        </li>
      <% end %>
    </ul>
    <%= link_to "Place Order", checkout_info_path %>
  </div>
<% end %>

<div class="columns is-multiline">
  <% @products.each do |product| %>
    <%= render partial: 'product', object: product %>
  <% end %>
</div>

<div class="block is-align-items-center" style="width: 10%">
  <%= paginate @products %>
</div>