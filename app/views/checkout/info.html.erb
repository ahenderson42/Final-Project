

<% sum = 0 %>

<% cart.each do |product| %>
  <% sum += product.price %>
<% end %>

<%= form_with(url: checkout_create_path, local: true, method: "post", class: 'mt-5 mb-5') do %>
  <div class="control">
    <%= label_tag 'full_name', "Enter your full name:" %>
    <%= text_field_tag 'full_name' %>
  </div>
  <div class="control">
    <%= label_tag 'address', 'Enter your address:' %>
    <%= text_field_tag 'address' %>
  </div>
  <div class="control">
    <%= label_tag 'province', 'Select your province:' %>
    <%= select_tag 'province', options_for_select(Province.all.map{|el| [el.name, el.id]}), { prompt: "Select Province", class: "form-control" } %>
  </div>
  <%= hidden_field_tag(:total_cost, sum) %>
  <div class="control">
    <%= submit_tag "Submit" %>
  </div>
<% end %>